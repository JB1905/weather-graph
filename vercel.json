{
  "version": 2,
  "builds": [
    {
      "src": "apps/client/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "build" }
    },
    { "src": "apps/server/src/server.ts", "use": "@now/node" }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": { "cache-control": "s-maxage=31536000,immutable" },
      "dest": "/apps/client/static/$1"
    },
    { "src": "/favicon.ico", "dest": "/apps/client/favicon.ico" },
    { "src": "/logo192.png", "dest": "/apps/client/logo192.png" },
    { "src": "/logo512.png", "dest": "/apps/client/logo512.png" },
    {
      "src": "/asset-manifest.json",
      "dest": "/apps/client/asset-manifest.json"
    },
    { "src": "/manifest.json", "dest": "/apps/client/manifest.json" },
    {
      "src": "/precache-manifest.(.*)",
      "dest": "/apps/client/precache-manifest.$1"
    },
    {
      "src": "/service-worker.js",
      "headers": { "cache-control": "s-maxage=0" },
      "dest": "/apps/client/service-worker.js"
    },
    {
      "src": "/graphql",
      "dest": "/apps/server/src/server.ts"
    },
    {
      "src": "/(.*)",
      "headers": { "cache-control": "s-maxage=0" },
      "dest": "/apps/client/index.html"
    }
  ]
}
